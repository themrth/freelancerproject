<%- include('partials/_header.ejs') -%>
    <%- include('partials/_navigation.ejs') -%>
    <%- include('partials/_masthead.ejs') -%>
        <!-- Contact Section-->
        <section class="page-section" id="contact">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Yeni Portföy Ekle</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Contact Section Form-->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <form id="contactForm" action="/portfolio" method="POST">
                    <!-- Name input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" name="title" type="text" placeholder="Başlık" required/>
                        <label for="name">Başlık</label>
                    </div>
                    <!-- Message input-->
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="message" name="description" type="text" placeholder="Açıklama" style="height: 10rem"  required></textarea>
                        <label for="message">Açıklama</label>
                    </div>
                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl" id="submitButton" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>
        </section>
        

<%- include('partials/_footer.ejs') -%>